<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Management System</title>
  <link rel="icon" href="/icon.png" type="image/png">
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <h1>Student Management System</h1>
  <div style="text-align: center;">
    <a href="/add"><button>Add New Student</button></a>
  </div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (students.length === 0) { %>
        <tr>
          <td colspan="4">No student records found.</td>
        </tr>
      <% } else { %>
        <% students.forEach(student => { %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.phone %></td>
            <td>
              <a href="/edit/<%= student._id %>">Edit</a> |
              <a href="/delete/<%= student._id %>" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>

</body>
</html>
